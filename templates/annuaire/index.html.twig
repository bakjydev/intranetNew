{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

    <style>
        .col-3 {
            margin: 1rem;
        }
    </style>

    <div class="navbar">{% include ('/navbar/index.html.twig') %}</div>
    <h1>Liste des utilisateurs</h1>
        {# On boucle sur les utilisateurs #}
        {% for user in userRepository %}
            <div class="container">
                <div class="card mt-5">
                    <h5 class="card-header">{{ user.prenom }} {{ user.nom }}</h5>
                    <div class="card-body">
                        <img class="img-fluid rounded-circle mx-auto"
                             src="{{ asset("assets/profile/" ~ user.imageName) }}"
                             alt={{ app.user.imageName }} width="100px">
                        <h5 class="card-title">{{ user.entreprise }}</h5>
                        <p class="card-text">Numéro de téléphone : {{ user.tel }}</p>
                        <a href="#" class="btn btn-primary">{{ user.email }}</a>
                    </div>
                </div>
            </div>
        {% else %}
            <tr>
                <td colspan=5>Il n'y a pas d'utilisateur inscrit</td>
            </tr>
        {% endfor %}

{% endblock %}
